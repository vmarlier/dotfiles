{
    "workbench.colorTheme": "Atom One Dark",
    "gopls": {
        "experimentalWorkspaceModule": true,
    },
    "vim.enableNeovim": true,
    "vim.leader": ",",
    "vim.normalModeKeyBindings": [
        {
            "before": ["<space>", "t"], // Equivalent to Shift + Space 
            "commands": [
                "workbench.action.terminal.toggleTerminal",
            ]
        },
        {
            "before": ["<space>", "e"],
            "commands": [
                "workbench.action.toggleSidebarVisibility",
            ]
        },
        {
            "before": ["<space>", "j"],
            "commands": [
                "workbench.action.navigateDown",
            ]
        },
        {
            "before": ["<space>", "k"],
            "commands": [
                "workbench.action.navigateUp",
            ]
        },
        {
            "before": ["<space>", "h"],
            "commands": [
                "workbench.action.navigateLeft",
            ]
        },
        {
            "before": ["<space>", "l"],
            "commands": [
                "workbench.action.navigateRight",
            ]
        },
        {
            "before": ["<leader>", "t"],
            "commands": [
                ":tabnew"
            ]
        },
        {
            "before": ["<leader>", "n"],
            "commands": [
                ":tabnext"
            ]
        },
        {
            "before": ["<leader>", "b"],
            "commands": [
                ":tabprevious"
            ]
        },
        {
            "before": ["<leader>", "q"],
            "commands": [
                ":quit"
            ]
        },
        {
            "before": ["<leader>", "s"],
            "commands": [
                ":split"
            ]
        },
        {
            "before": ["<leader>", "v"],
            "commands": [
                ":vsplit"
            ]
        },
    ],
    "redhat.telemetry.enabled": false,
    "window.zoomLevel": -1
}
