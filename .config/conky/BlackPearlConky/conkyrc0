# ..: CLOCK & CALENDAR :..
${color d7d7d7}${offset 56}${voffset -1}${cpugraph cpu6 17,1}${voffset -3}${hr 2}${color3}

${voffset -22}${offset 120}${font neuropol:size=20}${time %H:%M}${font}  ${voffset -3}${font Nimbus Mono L:size=9}$uptime
${voffset -5}${offset 110}${cpubar cpu6 0, 200}${voffset 2}${color1}
${font Nimbus Mono L:size=8 style=bold}${color2}${goto 150} ${exec date +%B\ %Y | sed 's/^.\| [a-z]/\U&/g'}
${offset 156}${color3}${font Nimbus Mono L:size=10}${execp cal | sed '1d ; s/^/ /g ; s/$/ /g ; s/'" $(date +%e)"'/\${color 3273b5}'" $(date +%e)"'\${color1}/1 ; s/^/\${goto 150}/g'} ${voffset -84} #


#${execpi 60 JOUR=`date +%e`; cal | sed '1d' | sed 's/^/ /g' | sed /" $JOUR "/s/" $JOUR "/" "'${color 3273b5}'"$JOUR"'${color3}'" "/ | sed "s/^/${offset 10}/"}


