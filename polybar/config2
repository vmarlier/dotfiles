[module/wlan]
type = custom/script
format = <label>
;label-underline = #00FFFF
label = %output%
exec = ~/Codes/bash/essid.sh
click-right = /usr/bin/menu-wifi-netctl.sh &|

[module/dmenu]
type = custom/script
format = <label>
label = %output%
exec = echo ""
label-foreground = ${colors.primary}
click-left = dmenu-rofi.sh  &|

