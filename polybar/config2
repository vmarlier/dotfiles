[colors]
;background = ${xrdb:color0:#222}
background = #121212
background-alt = #1E1E1E
;foreground = ${xrdb:color7:#222}
foreground = #FFFFFF
foreground-alt = #555
primary = #55
secondary = #e60053
alert = #FF0000
network = #6F73AD

[bar/example]
monitor = ${env:MONITOR}
width = 100%
height = 22
bottom = true
;offset-x = 1%
;offset-y = 1%
radius = 0
fixed-center = false
background = ${colors.background}
foreground = ${colors.foreground}
line-size = 3
line-color = #f00
;border-size = 4
;border-color = #00000000
padding-left = 4
padding-right = 2 
module-margin-left = 2
module-margin-right = 5
font-0 = siji:pixelsize=8;1
font-1 = fixed:pixelsize=9;1
font-2 = FontAwesome:size=10;1
tray-position = right
tray-padding = 2
;tray-transparent = true
;tray-background = #0063ff
;wm-restack = bspwm
;wm-restack = i3
;override-redirect = true
;scroll-up = bspwm-desknext
;scroll-down = bspwm-deskprev
;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev
separator = 

modules-left = dmenu wlan wlan-downspeed wlan-upspeed
modules-center =
modules-right = cpu filesystem archstat
